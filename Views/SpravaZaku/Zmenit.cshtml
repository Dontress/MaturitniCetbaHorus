@model MaturitniCetba.Models.UserModel



<h4>Změnit heslo:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ProcessZmenit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label">ID Uživatele</label>
                <input asp-for="Id" class="form-control" required/>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Nové heslo</label>
                <input asp-for="Password" class="form-control" type="password" required/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordConfirm" class="control-label">Potvrzení nového hesla</label>
                <input asp-for="PasswordConfirm" class="form-control" type="password" required/>
                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    @if (ViewBag.Success == 1)
    {
        <h5> Heslo změněno </h5>
    }
    @if (ViewBag.Success == -1)
    {
        <h5 style="color:red;"> Zadejte prosím platné údaje! </h5>
    }
</div>

<div>
    <a asp-action="Index">Zpět</a>
</div>


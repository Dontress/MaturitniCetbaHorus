@using Microsoft.AspNetCore.Http;
@using Microsoft.AspNetCore.Mvc;


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]Maturitní četba</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">

                <div class="flex-wrap:nowrap d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                <img src="~/Images/sps.JPG" width="100" height="35" asp-controller="Home" asp-action="Index" />
                            </a>
                        </li>

                    </ul>
                </div>
                @if (@Context.Session.GetString("SessionUser") != null)
                {
                   
                    string uzivatel = @Context.Session.GetString("SessionName");
                    int index = uzivatel.IndexOf("@");
                    if (index > 0)
                        uzivatel = uzivatel.Substring(0, index);
                    

                    <div class="float-right ">
                        <ul class="navbar-nav flex-grow-1 mr-auto">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Index">Logout( @uzivatel )</a>
                            </li>

                        </ul>
                    </div>
                }

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Aplikace pro výběr maturitní četby
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
